Public Class Form1
    'For loop
    'this displays numbers from 1 to 10
    Private Sub Button2_Click(sender As Object, e As EventArgs) Handles btnCounting.Click
        Dim cont As Integer = 0
        cont = txtAskNumbers.Text
        While cont
            cont = (cont - 1)
            txtAskNumbers.Text = cont
            'display number in textbox and msg box
            MessageBox.Show("Count" & cont)
        End While
    End Sub

    Private Sub txtDisplayNumbers_TextChanged(sender As Object, e As EventArgs) Handles txtDisplayNumbers.TextChanged

    End Sub

    Private Sub btnCount_Click(sender As Object, e As EventArgs) Handles btnCount.Click
        Dim count As Integer
        For count = 1 To 10
            txtDisplayNumbers.Text = count
            'diplay msgbox
            MessageBox.Show("number" & count)
        Next
    End Sub

    Private Sub txtAskNumbers_TextChanged(sender As Object, e As EventArgs) Handles txtAskNumbers.TextChanged
        'Exercise ii,
        'while loop
        'A programe that asks a user to for number and then counts to zero
    End Sub
End Class
